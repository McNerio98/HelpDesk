<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Principal</servlet-name>
        <servlet-class>com.helpdesk.controladores.Principal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.helpdesk.controladores.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Empleados</servlet-name>
        <servlet-class>com.helpdesk.controladores.Empleados</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Departamentos</servlet-name>
        <servlet-class>com.helpdesk.controladores.Departamentos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Clasificaciones</servlet-name>
        <servlet-class>com.helpdesk.controladores.Clasificaciones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Incidencias</servlet-name>
        <servlet-class>com.helpdesk.controladores.Incidencias</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Grupo</servlet-name>
        <servlet-class>com.helpdesk.controladores.Grupo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Principal</servlet-name>
        <url-pattern>/Principal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Empleados</servlet-name>
        <url-pattern>/Empleados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Departamentos</servlet-name>
        <url-pattern>/Departamentos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Clasificaciones</servlet-name>
        <url-pattern>/Clasificaciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Incidencias</servlet-name>
        <url-pattern>/Incidencias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Grupo</servlet-name>
        <url-pattern>/Grupo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            Login
        </welcome-file>
    </welcome-file-list>
</web-app>
